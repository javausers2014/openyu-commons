<?xml version="1.0" encoding="UTF-8"?>
<beans
	xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:p="http://www.springframework.org/schema/p"
	xsi:schemaLocation="
             http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-4.0.xsd">

	<!-- Apache Commons Net FTP Connection Pool -->
	<bean
		id="ftpClientConnectionFactory"
		class="org.openyu.commons.commons.net.ftp.impl.FtpClientConnectionFactoryImpl"
		destroy-method="close">
		<property name="ip">
			<value>${ftpClient.ip}</value>
		</property>
		<property name="port">
			<value>${ftpClient.port}</value>
		</property>
		<property name="connectTimeout">
			<value>${ftpClient.connectTimeout}</value>
		</property>
		<property name="retryNumber">
			<value>${ftpClient.retryNumber}</value>
		</property>
		<property name="retryPauseMills">
			<value>${ftpClient.retryPauseMills}</value>
		</property>
		<property name="username">
			<value>${ftpClient.username}</value>
		</property>
		<property name="password">
			<value>${ftpClient.password}</value>
		</property>
		<property name="bufferSize">
			<value>${ftpClient.bufferSize}</value>
		</property>
		<property name="clientMode">
			<value>${ftpClient.clientMode}</value>
		</property>
		<property name="fileType">
			<value>${ftpClient.fileType}</value>
		</property>
		<property name="controlEncoding">
			<value>${ftpClient.controlEncoding}</value>
		</property>
		<property name="remotePath">
			<value>${ftpClient.remotePath}</value>
		</property>
		<property name="initialSize">
			<value>${ftpClient.initialSize}</value>
		</property>
		<property name="maxActive">
			<value>${ftpClient.maxActive}</value>
		</property>
		<property name="maxIdle">
			<value>${ftpClient.maxIdle}</value>
		</property>
		<property name="minIdle">
			<value>${ftpClient.minIdle}</value>
		</property>
		<property name="maxWait">
			<value>${ftpClient.maxWait}</value>
		</property>
		<property name="timeBetweenEvictionRunsMillis">
			<value>${ftpClient.timeBetweenEvictionRunsMillis}</value>
		</property>
		<property name="numTestsPerEvictionRun">
			<value>${ftpClient.numTestsPerEvictionRun}</value>
		</property>
		<property name="minEvictableIdleTimeMillis">
			<value>${ftpClient.minEvictableIdleTimeMillis}</value>
		</property>
	</bean>

	<bean
		id="ftpClientSessionFactory"
		class="org.openyu.commons.commons.net.ftp.impl.FtpClientSessionFactoryImpl"
		p:ftpClientConnectionFactory-ref="ftpClientConnectionFactory" />

	<bean
		id="ftpClientTemplate"
		class="org.openyu.commons.fto.commons.net.ftp.impl.FtpClientTemplateImpl"
		p:ftpClientSessionFactory-ref="ftpClientSessionFactory" />

	<!-- fto supporter, use ftpClientSessionFactory 
	<bean
		id="ftpClientFtoSupporter"
		class="org.openyu.commons.fto.commons.net.ftp.supporter.FtpClientFtoSupporter"
		p:ftpClientSessionFactory-ref="ftpClientSessionFactory" />
	-->
	
	<!-- fto supporter, use ftpClientTemplate -->
	<bean
		id="ftpClientFtoSupporter"
		class="org.openyu.commons.fto.commons.net.ftp.supporter.FtpClientFtoSupporter"
		p:ftpClientTemplate-ref="ftpClientTemplate" />

</beans>